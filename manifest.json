{
  "name": "PCS-Note-Cleaner",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Allows to automatically remove note items if a 'Required by' date is in the past.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://new.precisionconference.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://new.precisionconference.com/submissions*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}